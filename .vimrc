autocmd BufEnter *.mirah set filetype=ruby

set guioptions+=m  "remove menu bar
set guioptions+=T  "remove toolbar
set guioptions-=r  "remove right-hand scroll bar

map <C-t> :CommandT<Enter>

colorscheme sunburst2

set dy=lastline
set nu
set cursorline

set ts=2
set sw=2

set sta
set softtabstop=2
set expandtab
set ai
set si
set pi
set is



